{
    "name": "devdojo/laravel-reactions",
    "type": "library",
    "description": "",
    "keywords": [
        "laravel",
        "package",
	"reactions",
	"like",
	"love",
	"eloquent",
	"trait"
    ],
    "homepage": "https://github.com/thedevdojo/laravel-reactions",
    "license": "MIT",
    "authors": [
        {
            "name": "Tony Lea",
            "email": "tony@devdojo.com",
            "homepage": "https://devdojo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.2|^8.0",
        "illuminate/database": "~5.5|~5.6|~5.7|~5.8|^6.0|^7.0|^8.0",
        "illuminate/support": "~5.5|~5.6|~5.7|~5.8|^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.10",
        "mockery/mockery": "^1.0",
        "orchestra/database": "~3.5.0|~3.6.0|~3.7.0|~3.8.0|^4.0",
        "orchestra/testbench": "~3.5.0|~3.6.0|~3.7.0|~3.8.0|^4.0",
        "phpunit/phpunit": "^7.5|^8.0|^8.5"
    },
    "autoload": {
        "psr-4": {
            "DevDojo\\LaravelReactions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevDojo\\LaravelReactions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
